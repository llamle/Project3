<form action="<%= session_path %>" method="post" autocomplete="off">

  <div class="switch">
    <h5>Log in as:</h5>
    <label>
      User
      <input type="checkbox">
      <span class="lever"></span>
      Comedian
    </label>
  </div><br/>

  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">
  <input type="text"
         name="user[username]"
         placeholder="user name">
  <input type="password"
         name="user[password]"
         placeholder="password">
  <div class="actions">
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons">send</i>
      </button>
  </div>
</form>
