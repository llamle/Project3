<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br>
    <input id="event_date" type="text" name="event[date]" class="datepicker">
  </div>
  <div class="field">
    <%= f.label :time %><br>
    <input type="text" name="event[time]" id="event_time" placeholder="Enter a time">
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <input type="text" name="event[location]" id="event_location">
  </div>
  <div class="field">
    <%= f.label :venue %><br>
    <%= f.text_field :venue %>
  </div>
  <div class="field">
    <%= f.label :lineup %><br>
    <%= f.text_field :lineup %>
  </div>
  <div class="field">
    <%= f.label :tickets_link %><br>
    <%= f.text_field :tickets_link %>
  </div>
  <div class="actions">
    <button class="btn waves-effect waves-light" type="submit" name="action">Create Event</button>
  </div>
<% end %>
