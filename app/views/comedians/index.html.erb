<p id="notice"><%= notice %></p>

<h1>Listing Comedians</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Password</th>
      <th>Location</th>
      <th>Photo</th>
      <th>Bio</th>
      <th>Twitter</th>
      <th>Facebook</th>
      <th>Instagram</th>
      <th>Youtube</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comedians.each do |comedian| %>
      <tr>
        <td><%= comedian.username %></td>
        <td><%= comedian.email %></td>
        <td><%= comedian.password_digest %></td>
        <td><%= comedian.location %></td>
        <td><%= comedian.photo %></td>
        <td><%= comedian.bio %></td>
        <td><%= comedian.twitter %></td>
        <td><%= comedian.facebook %></td>
        <td><%= comedian.instagram %></td>
        <td><%= comedian.youtube %></td>
        <td><%= link_to 'Show', comedian %></td>
        <td><%= link_to 'Edit', edit_comedian_path(comedian) %></td>
        <td><%= link_to 'Destroy', comedian, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comedian', new_comedian_path %>
